        <div class="page-header">
          <h1>All Events</h1>
        </div>
        <%= render partial: "static_pages/event", collection: @events %> 
        
<%= will_paginate @events, class:"pager" %>
    <%= button_to 'Add an Event', new_event_path, method: 'get', class: "btn btn-primary btn-sm" %>
